<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".ui.details_page.DetailsComicActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_backgroundDetailsComicPage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/raster"/>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarDetailsComicPage"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title=" "
            android:background="#00FFFFFF"
            app:navigationIcon="@drawable/ic_arrow_back" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_comicCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbarDetailsComicPage"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/iv_comicCover"
                android:layout_width="130dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:padding="3dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/raster" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_comicTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_comicCover"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:text="AMAZING SPIDER-MAN (2014) #1 (Turner Variant)"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_comicDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_comicTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:text=" fjijwgijwejfeiwf ehfwefiweiojfwiojfjw edjwgijwejfi fjiwejfiwej ifwij iejweif efjiewf ehfwef e8fu8we fueww8eu efe fiefiwhjifwenweijrijiefjufjjweufjeiwj kifuwhfuwen eufhewufuh hewfuwhefu uehfuehfuh hurhuwefj hwufiweufhw jwefhuwfhwefhhu hewufhuhfuhuc whfuhuwefhuwhe hwuehfuhufe hwfhuiwhguj hwefuhfuhg hufgwefgwefu efwyfeygfywgy hefyweyfhuwegfy hwefuwefhuweh hwefuewfhuweh hefuhewhfu8wh"
            android:textColor="@color/inputLineColor"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/publishedDateScope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_comicDescription"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Published: "
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_publishedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="April 30, 2014"
                android:textColor="@color/inputLineColor"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/priceScope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/publishedDateScope"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ "
                android:textColor="@color/inputLineColor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5,99"
                android:textColor="@color/inputLineColor"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pagesScope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/priceScope"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pages: "
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_numberPages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="38"
                android:textColor="@color/inputLineColor"
                android:textSize="18dp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>